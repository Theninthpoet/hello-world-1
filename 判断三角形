#include<iostream>
#include<cmath>
#include<iomanip>
#include<algorithm>
using namespace std;
int main ()
{
	int n;
	
	cin>>n;
	int a,b,c;
	double s;
	while(n--)
	{
		cin>>a>>b>>c;
		if(a+b-c<=0||a+c-b<=0||b+c-a<=0)
		{
			cout<<"Failed"<<endl;
			continue;
		}
		s = (a+b+c)/2.0;
		cout<<fixed<<setprecision(2)<<sqrt(s*(s-a)*(s-b)*(s-c))<<endl;
	 } 
 } 
